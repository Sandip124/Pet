@model List<Animal>

    <h2>All Animals</h2>

<div class="row">
    <div class="col-md-2">
        <a class="btn btn-primary" asp-action="New">Add New Animal</a>
    </div>
    <div class="col-md-10">
        <form asp-action="Index" method="POST">
            <div class="row input-group">
                <input type="text" name="search" id="search" class="form-control">
                <div class="input-group-btn">
                    <input type="submit" value="search" class="btn btn-primary">
                </div>
            </div>
        </form>
    </div>
</div>

    <table class="table table-bodered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Age</th>
                <th>Color</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var animal in Model)
            {
                <tr>
                    <td>@animal.Id</td>
                    <td>@animal.Name</td>
                    <td>@animal.Age</td>
                    <td>@animal.Color</td>
                    <td>
                        <a 
                        asp-action="Edit"
                        class="btn btn-info btn-sm" 
                        asp-route-Id="@animal.Id">
                         Edit</a>&nbsp;
                        <a 
                        class="btn btn-danger btn-sm delete" 
                        data-id="@animal.Id"
                        data-controller="Animal"
                        data-action="delete"
                        data-body-message="Are you sure want to delete?"
                        >Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>